{
	"name": "react-action-sheet",
	"version": "0.1.0",
	"description": "A react component for an animated mobile-first dynamic modal/bottom-sheet",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/rsoury/react-action-sheet.git"
	},
	"author": {
		"name": "Ryan Soury",
		"email": "ryan@webdoodle.com.au",
		"url": "https://webdoodle.com.au"
	},
	"keywords": [
		"react",
		"react-component",
		"fast",
		"mobile",
		"dialog",
		"sheet",
		"modal"
	],
	"main": "./build/main.js",
	"module": "./build/main.js",
	"unpkg": "./build/main.js",
	"jsdelivr": "./build/main.js",
	"files": [
		"build"
	],
	"scripts": {
		"start": "styleguidist server",
		"build": "rescripts build",
		"test": "jest --colors --verbose --no-cache",
		"clean": "rimraf ./build ./dist",
		"lint": "eslint -c ./.eslintrc.js \"src/**/*.{js,jsx,ts,tsx}\"",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"iOS > 7",
		"Android > 3",
		"ChromeAndroid > 60",
		"Samsung > 0"
	],
	"peerDependencies": {
		"@emotion/core": "10.x",
		"@emotion/styled": "10.x",
		"react": "^16.x",
		"react-dom": "^16.x"
	},
	"dependencies": {
		"framer-motion": "^1.10.3",
		"lodash.debounce": "^4.0.8",
		"modern-normalize": "^0.6.0",
		"prop-types": "^15.7.2",
		"react-append-to-body": "^2.0.24",
		"react-device-detect": "^1.11.14",
		"react-feather": "^1.1.6",
		"react-fixed-bottom": "^1.0.5",
		"react-resize-detector": "^4.2.0",
		"react-scrolllock": "^4.0.1",
		"react-shadow": "^18.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-react": "^7.9.4",
		"@emotion/core": "^10.0.28",
		"@emotion/styled": "^10.0.27",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-emotion": "^10.0.33",
		"css-loader": "^3.5.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^6.0.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-emotion": "^10.0.27",
		"eslint-plugin-import": "^2.18.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.14.2",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.17.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-styleguidist": "^11.0.5",
		"rimraf": "^2.6.3",
		"to-string-loader": "^1.1.6",
		"webpack": "^4.42.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.+(js|jsx)": [
			"yarn lint --fix",
			"git add"
		],
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"yarn format",
			"git add"
		]
	}
}
